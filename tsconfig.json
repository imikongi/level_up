{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    //in CommonJs or es6 module mode bundle is not splitting on chunks
    "module": "ESNext",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
//    "baseUrl": ".",
//    "paths": {
//      "*": ["./src/*"]
//    },
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": ["**/*.tsx", "**/*.jsx", "src/app/types/global.d.ts"]
}
